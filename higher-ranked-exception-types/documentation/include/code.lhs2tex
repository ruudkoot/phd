%%%% GENERIC FORMATTING FOR LHS2TEX CODE

%format EXN = "\textsc{exn}"

%format LAMBDA (x) (e) = "\lambda" x "." e
%format TYLAMBDA (x) (t) (e) = "\Lambda" x ":" t "." e
%format -|> = "\mapsto "
%format -\> = "\mapsto "

%format ~> = "\leadsto "

%format True = "\mathbf{true}"
%format False = "\mathbf{false}"

%format bottom     = "\bot"
%format bottom_chi = "\bot_\chi"
%format bottom_E   = "\bot_\mathbf{E}"
%format e_E        = "\{\mathbf{E}\}"

%format Var (n) = "x_" n
%format Bottom (l) (t) = "\bot^{" l "}_{" t "}"
%format Seq (e1) (e1) = "(" e1 "\ \mathbf{seq}\ " e2 ")"
%format Fix (e) = "(\mathbf{fix}\ " e ")"

%format alpha = "\alpha"
%format beta  = "\beta"
%format tau   = "\tau"
%format theta = "\theta"

%format e_0
%format e_1
%format e_2
%format e_3
%format e_4
%format e_5
%format e_6
%format e_7
%format e_8
%format e_9
%format e'_1 = "e^{\prime}_{1}"
%format e'_2 = "e^{\prime}_{2}"

%format throws                  = "\mathbf{throws}\xspace"
%format #                       = "\ \cup\ "
%format Throws (t) (e)          = t "^{" e "}"
%format ThrowsArr (t1) (t2) (e) = t1 "\xrightarrow{" e "}" t2
%format noexn                   = "\emptyset"

%format Set (a) = "\left\{" a "\right\}"
%format EmptySet = "\emptyset"

%format DenoteEnv (t) (e) = "\llbracket " t "\rrbracket_{" e "}"
